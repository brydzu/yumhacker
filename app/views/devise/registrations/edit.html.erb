<% content_for(:title, current_user.full_name + " | Edit Profile | Yumhacker") %>
<% content_for(:description, "Customize your profile so other YumHackers can learn more about you.") %>

<div id='application_modal' style='display:none;'></div>
<header></header>
<section>
  <div class='devise_form' id='edit_profile_container'>

    <div class='form_container card border'>
      <h3>Edit Your Account</h3>
      <%= devise_error_messages! %>

      <div class='inputs_container'>
        <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :autocomplete => "off", :html => { :multipart => true } ) do |f| %>

          <div class='field'><%= f.label :first_name %><br />
          <%= f.text_field :first_name, :class => 'text_input' %></div>

          <div class='field'><%= f.label :last_name %><br />
          <%= f.text_field :last_name, :class => 'text_input' %></div>

          <div class='field'><%= f.label :location %><br />
          <%= f.text_field :location, :class => 'text_input' %></div>

          <div class='field'><%= f.label :website %><br />
          <%= f.text_field :website, :class => 'text_input' %></div>

          <div class='field'><%= f.label :description %><br />
          <%= f.text_area :description, :class => 'text_input', :maxlength => '140' %></div>

          <div class='field'><%= f.label :email %><br />
          <%= f.email_field :email, :autocomplete => "off", :class => 'text_input' %></div>

          <div class='field'><%= f.label :avatar, 'Profile photo' %><br />
          <%= f.file_field :avatar, :class => 'text_input' %></div>

          <a class='change_password expander'>Change your password</a>

          <div id='password_fields'>
            <div class='field'><%= f.label :new_password %><br />
            <%= f.password_field :password, :autocomplete => "off", :value => '', :class => 'text_input' %></div>

            <div class='field'><%= f.label :new_password_confirmation %><br />
            <%= f.password_field :password_confirmation, :autocomplete => "off", :value => '', :class => 'text_input' %></div>
          </div>

          <div class='field validate'><%= f.label :email %><br />
          <%= f.text_field :phone, :class => 'text_input validate', :value => '', :autocomplete => 'off' %></div>
          <p class="validate">Please leave this validation field blank.</p>

          <div class='center update_btn'><%= f.submit "Update", :class => 'btn text' %></div>

          <div class='throbber'>
            <%= image_tag "throbber_sm.gif", :class => 'center' %>
          </div>
        <% end %>
      </div>
    </div>

    <div class='cancel_container'>
      <a href="<%= '/users/' + current_user.id.to_s %>">Cancel</a>
    </div>

  </div>
</section>
<footer></footer>
